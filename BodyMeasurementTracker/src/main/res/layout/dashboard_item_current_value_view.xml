<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lastValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/lastValueEdit"
            android:visibility="gone"
            android:textAlignment="textEnd"
            android:layout_width="60dp"
            android:textSize="32sp"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:layout_weight="1"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/lastValueUnit"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999" />

        <EditText
            android:id="@+id/lastValueUnitEdit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="end"
            android:focusable="false"
            android:textColor="#999999"
            android:inputType="none" />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/extraInfoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/changeDirection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:ignore="ContentDescription"
            android:tint="#777777"/>

        <TextView
            android:id="@+id/changeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/changePeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#aaaaaa"/>

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>